<?xml version='1.0' encoding='utf-8'?>
<widget id="com.campudus.apptemplate" version="0.0.1" xmlns="http://www.w3.org/ns/widgets"
        xmlns:cdv="http://cordova.apache.org/ns/1.0">
  <name>Cordova App template</name>
  <description>
    App template for Cordova apps with Gulp, SCSS, Browserify and live reloading.
  </description>
  <author email="info@campudus.com" href="http://www.campudus.com">
    Campudus GmbH
  </author>
  <content src="index.html"/>
  <hook type="after_prepare" src="scripts/add_gapreload_info.js"/>
  <hook type="after_plugin_add" src="scripts/synchronize_plugin_list.js"/>
  <hook type="after_plugin_rm" src="scripts/synchronize_plugin_list.js"/>
  <plugin name="cordova-plugin-whitelist" version="1"/>
  <access origin="*"/>
  <allow-navigation href="http://*/*" />
  <allow-navigation href="https://*/*" />
  <allow-intent href="tel:*"/>
  <allow-intent href="sms:*"/>
  <allow-intent href="mailto:*"/>
  <allow-intent href="geo:*"/>
  <platform name="android">
    <allow-intent href="market:*"/>
  </platform>
  <platform name="ios">
    <allow-intent href="itms:*"/>
    <allow-intent href="itms-apps:*"/>
  </platform>
</widget>
